{
  "name": "kubernetes-file-generator",
  "displayName": "kubenetes-file-generator",
  "description": "Extension to create new kubernetes files easily, with templates for each component ",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.22.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kubernetes-file-generator.createDeployment",
        "title": "Create Deployment"
      },
      {
        "command": "kubernetes-file-generator.createService",
        "title": "Create Service"
      },
      {
        "command": "kubernetes-file-generator.createConfigMap",
        "title": "Create ConfigMap"
      },
      {
        "command": "kubernetes-file-generator.cronJob",
        "title": "Create CronJob"
      },
      {
        "command": "kubernetes-file-generator.daemonSet",
        "title": "Create DeamonSet"
      },
      {
        "command": "kubernetes-file-generator.horizontalPodAutoescaller",
        "title": "Create HorizontalPodAutoescaller"
      },
      {
        "command": "kubernetes-file-generator.ingress",
        "title": "Create Ingress"
      },
      {
        "command": "kubernetes-file-generator.persistentVolume",
        "title": "Create PersistentVolume"
      },
      {
        "command": "kubernetes-file-generator.persistentVolumeClaim",
        "title": "Create PersistentVolumeClaim"
      },
      {
        "command": "kubernetes-file-generator.secret",
        "title": "Create Secret"
      },
      {
        "command": "kubernetes-file-generator.statefulSet",
        "title": "Create StatefulSets"
      }
    ],
    "submenus": [
      {
        "id": "kubernetes-file-generator.submenu",
        "label": "Kubernetes File Generator"
      } 
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "kubernetes-file-generator.submenu",
          "group": "kubenetes"
        }
      ],
      "kubernetes-file-generator.submenu": [
        {
          "command": "kubernetes-file-generator.createDeployment"
        },
        {
          "command": "kubernetes-file-generator.createService"
        },
        {
          "command": "kubernetes-file-generator.createConfigMap"
        },
        {
          "command": "kubernetes-file-generator.cronJob"
        },
        {
          "command": "kubernetes-file-generator.daemonSet"
        },
        {
          "command": "kubernetes-file-generator.horizontalPodAutoescaller"
        },
        {
          "command": "kubernetes-file-generator.ingress"
        },
        {
          "command": "kubernetes-file-generator.persistentVolume"
        },
        {
          "command": "kubernetes-file-generator.persistentVolumeClaim"
        },
        {
          "command": "kubernetes-file-generator.secret"
        },
        {
          "command": "kubernetes-file-generator.statefulSet"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
