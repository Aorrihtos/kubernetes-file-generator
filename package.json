{
  "name": "kubernetes-file-generator",
  "displayName": "kubenetes-file-generator",
  "description": "Extension to create new kubernetes files easily, with templates for each component ",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [

  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kubernetes-file-generator.showTemplates",
        "title": "Kubernetes Templates",
        "category": "Kubernetes"
      },
      {
          "command": "kubernetes-file-generator.createDeployment",
          "title": "Create Deployment"
      },
      {
          "command": "kubernetes-file-generator.createService",
          "title": "Create Service"
      },
      {
          "command": "kubernetes-file-generator.createConfigMap",
          "title": "Create ConfigMap"
      }
  ],
    "menus": {
      "explorer/context": [
        {
          "command": "kubernetes-file-generator.showTemplates",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
